@import "./common/vendor.wxss";
page,
page {
  padding: 0;
  margin: 0;
  height: 100%;
}

.spacePage {
  padding: 0 30rpx;
}

._button {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 28rpx;
  padding-right: 28rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  border-radius: 10rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000000;
  background-color: #f8f8f8;
}

.mb_10 {
  margin-bottom: 20rpx;
}

.mt_10 {
  margin-top: 20rpx;
}

.mt_20 {
  margin-top: 40rpx;
}

.pd0 {
  padding: 0 !important;
}

.mg_0 {
  margin: 0 !important;
}

.white_bg {
  background: #fff !important;
}

.gray_bg {
  background: #f2f2f2 !important;
}

.font40 {
  font-size: 40rpx;
}

.w_165 {
  width: 330rpx !important;
}

.w_690 {
  width: 690rpx !important;
}

.arrow-right {
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid rgba(153, 153, 153, 0.8);
  border-right: 2rpx solid rgba(153, 153, 153, 0.8);
  transform: rotate(45deg);
  margin-right: 6rpx;
}

.arrow-bottom {
  width: 10rpx;
  height: 10rpx;
  border-bottom: 2rpx solid #cccccc;
  border-right: 2rpx solid #cccccc;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.arrow-top {
  width: 10rpx;
  height: 10rpx;
  border-top: 2rpx solid #cccccc;
  border-left: 2rpx solid #cccccc;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.mp-tabs {
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #e0e6eb;
  margin: 40rpx 0;
}

.tabs-item {
  display: inline-block;
  width: 50%;
  text-align: center;
  padding: 30rpx 0;
  color: #999999;
  font-size: 32rpx;
}

.mp-tabs .title {
  width: auto;
  padding: 30rpx 0;
}

.mp-tabs .active {
  color: #333333;
  border-bottom: 6rpx solid #b60005;
}

.sure-submit-button {
  width: 650rpx;
  height: 88rpx;
  background: rgba(182, 0, 5, 1);
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.garyBack {
  background: #cccccc !important;
  color: rgba(255, 255, 255, 1) !important;
}

.space-box {
  height: 100rpx;
  margin: 0 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eeeeee;
}

.noBorder {
  border: none;
}

.leftB-title {
  position: relative;
  background: #fff;
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  padding-left: 10rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid rgba(188, 23, 28, 1);
}.flex-box-content {
  position: relative;
  height: 100%;
  display: flex;
  display: -ms-flex;
  display: -webkit-flex;
  flex-direction: column;
}

.flex-box-content .flex-box-body {
  width: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  background: #fff;
  flex: 1;
  -ms-flex: 1;
  -webkit-flex: 1;
}

.flex-box-content .flex-box-body::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

.flex-box-content .flex-box-body::-webkit-scrollbar-thumb {
  border-radius: 10rpx;
  -webkit-box-shadow: inset 0 0 10rpx rgba(0,0,0,0.2);
  background: rgba(0,0,0,0.2);
}

.flex-box-content .flex-body-noScroll {
  width: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  background: inherit;
  flex: 1;
  -ms-flex: 1;
  -webkit-flex: 1;
}

.flex-box-content .flex-box-footer {
  position: relative;
  padding: 16rpx 30rpx;
}

.flex-box-content .flex-box-footer .allow-button {
  position: relative;
  width: 100%;
  height: 88rpx;
  background: #b60005;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.flex-box-content .flex-box-footer .disabeld {
  background: #d8d8d8;
}

.scroll_box {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 0;
  background: #f2f2f2;
  white-space: nowrap;
}

.scroll_box .item_list {
  width: 640rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.scroll_box .complaint_list {
  width: auto;
  padding: 30rpx 0;
  margin: 0 50rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  display: inline-block;
}

.scroll_box .complaint_list:first-child {
  margin-left: 0;
}

.scroll_box .active {
  color: #bc171c;
  border-bottom: 4rpx solid #bc171c;
}

.lock-detail-content {
  position: relative;
  padding: 30rpx 0;
  min-height: calc(100% - 60rpx);
  background: #f2f2f2;
}

.lock-detail-content .lock-body-area {
  position: relative;
  background: #fff;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
}

.lock-detail-content .lock-body-area .lock-box {
  height: 100rpx;
  padding-right: 30rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eeeeee;
}

.lock-detail-content .lock-body-area .lock-box:last-child {
  border-bottom: 0;
}

.wx-switch-input::before {
  background: #999999 !important;
}

.modal-body {
  display: flex;
  align-items: center;
}

.modal-body .reason .label {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #000;
  border: 2rpx solid #ccc;
}

.modal-body .reason .active {
  color: #fff;
  background: #b60005;
}

.remark-content {
  height: 160rpx;
  margin: 20rpx 30rpx 0;
  display: flex;
  align-items: center;
}

.remark-content .other {
  min-width: 80rpx;
}

.remark-content .inputClass {
  flex-grow: 1;
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #ccc;
}

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.6);
  z-index: 9999;
}

.modal-content {
  display: flex;
  flex-direction: column;
  width: 630rpx;
  margin: 0 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-btn-wrapper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel-btn {
  border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content {
  flex: 1;
  height: 100%;
  overflow-y: hidden;
}

.main-content .title {
  text-align: center;
  padding: 30rpx 0;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 2rpx solid #e5e5e5;
}

.main-content .main-body {
  padding: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
}

.choose-reason-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.choose-reason-content .title {
  text-align: center;
  padding: 30rpx 0;
  font-size: 36rpx;
  font-weight: 600;
  font-family: PangMenZhengDao;
  color: #fff;
  background: #bc171c;
  border-radius: 10rpx 10rpx 0 0;
}

.choose-reason-content .main-body {
  padding: 30rpx;
  font-size: 24rpx;
  flex-grow: 1;
  overflow: auto;
}

.choose-reason-content .main-body .active {
  color: #fff;
  background: #b60005;
}

.choose-reason-content .main-body .label {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #000;
  border: 2rpx solid #ccc;
}

.modal-close-wrapper {
  background-color: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn-wrapper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid rgba(7,17,27,0.1);
}

.modal-btn-wrapper .chooseReason-confirm-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}